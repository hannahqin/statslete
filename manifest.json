{
  "manifest_version": 2,

  "name": "STATSLETE",
  "description": "woooooo go statslete",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "statslete.html"
  },

  "icons": {
    "16": "16icon.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications"
  ],

  "background": {
    "scripts": ["sample.js"]
  }

}
